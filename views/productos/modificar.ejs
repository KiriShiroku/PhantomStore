<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
  <form action="/editarProducto" method="post" enctype="multipart/form-data">
    <div class="card">
      <div class="card-header">
        <h1>Modificar producto</h1>
      </div>
      <div class="card-body">
        <input type="hidden" name="id" id="id" value="<%= producto.id %>">
        <input class="form-control mb-3" type="text" value="<%= producto.nombre %>" name="nombre" id="nombre" placeholder="Nombre del Producto" autofocus>
        <input class="form-control mb-3" type="text" value="<%= producto.stock %>" name="stock" id="stock" placeholder="Stock">
        <!-- <input class="form-control" type="text" value="<%= producto.desc %>" name="desc" id="desc" placeholder="Desc"> -->
        <input class="form-control" type="number" value="<%= producto.precio %>" name="precio" id="precio" placeholder="Precio">
        <input class="form-control" type="file" name="foto" id="foto" placeholder="Foto">
      </div>      
      <div class="card-footer">
        <button type="submit" class="form-control btn btn-primary">Modificar producto</button>
      </div>
    </div>
  </form>
</div>

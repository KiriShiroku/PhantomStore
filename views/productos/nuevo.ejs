<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
  <form action="/nuevoproducto" method="post" enctype="multipart/form-data">
    <div class="card"></div>
      <div class="card-header">
        <h1>Nuevos Títulos</h1>
      </div>
      <div class="card-body">
        <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Título" autofocus>        
        <input class="form-control mb-3" type="text" name="stock" id="stock" placeholder="Categoría">
       <!-- <input class="form-control" type="text" name="desc" id="desc" placeholder="Desc"> -->
        <input class="form-control" type="number" name="precio" id="precio" placeholder="Precio">
        <input class="form-control" type="file" name="foto" id="foto" placeholder="Foto">
      </div>
      <div class="card-footer">
        <button class="form-control btn btn-primary" type="submit">Guardar producto</button>
      </div>
    </div>
  </form>
</div>

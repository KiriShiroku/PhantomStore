<%- include("../templates/encabezado") %>

<div class="container mt-5">
    <form action="/login" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Iniciar Sesión</h1>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="password">Nombre de usuario</label>
                    <input class="form-control" type="text" id="usuario" name="usuario">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input class="form-control" type="password" id="password" name="password">
                </div>
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit" value="Iniciar sesion">Iniciar Sesión</button>                
            </div>
        </div>
    </form>
    <div class="card mt-3">
        <div class="card-header">
            <h1>Registrarse</h1>
        </div>
        <div class="card-body">
            <p>¿Aun no tienes una cuenta? Regístrate ahora</p>
            <a href="/nuevousuario" class="btn btn-primary">Registrarse</a>
        </div>
    </div>
</div>

